<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name ="llamadoDeEmergenciaItem"
            type ="com.example.soluemergencias.data.data_objects.domainObjects.LlamadoDeEmergenciaEnRecyclerView"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/space_small"
        android:elevation="4dp"
        android:background="@color/settingOptionsBackground">

        <!--Fecha-->
        <TextView
            android:id="@+id/textView_llamadoDeEmergencia_fecha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/space_medium"
            android:paddingVertical="@dimen/textPadding"
            android:text="@string/fecha"
            android:textColor="@color/text"
            android:textSize="20sp"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="@+id/textView_llamadoDeEmergencia_motivoDelLlamado"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/space_medium"
            android:paddingVertical="@dimen/textPadding"
            android:textColor="@color/text"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/textView_llamadoDeEmergencia_fecha"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent"
            app:seteandoRegistroItem="@{llamadoDeEmergenciaItem.fecha}"
            tools:text="28-05-2023"/>
        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:elevation="4dp"
            android:background="@color/azulMarino"
            app:layout_constraintTop_toBottomOf="@id/textView_llamadoDeEmergencia_fecha"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!--Hora-->
        <TextView
            android:id="@+id/textView_llamadoDeEmergencia_hora"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/textView_llamadoDeEmergencia_motivoDelLlamado"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider1"
            android:paddingHorizontal="@dimen/space_medium"
            android:paddingVertical="@dimen/textPadding"
            android:text="@string/hora"
            android:textColor="@color/text"
            android:textSize="20sp"
            android:gravity="end"
             />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/space_medium"
            android:textColor="@color/text"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView_llamadoDeEmergencia_motivoDelLlamado"
            app:layout_constraintBottom_toBottomOf="@id/textView_llamadoDeEmergencia_hora"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView_llamadoDeEmergencia_hora"
            app:seteandoRegistroItem="@{llamadoDeEmergenciaItem.hora}"
            tools:text="18:01:00"/>
        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:elevation="4dp"
            android:background="@color/azulMarino"
            app:layout_constraintTop_toBottomOf="@id/textView_llamadoDeEmergencia_hora"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!--UbicaciÃ³n-->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider2">

            <TextView
                android:id="@+id/textView_llamadoDeEmergencia_geoPoint"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="end"
                android:paddingHorizontal="@dimen/space_medium"
                android:paddingVertical="@dimen/textPadding"
                android:text="@string/geoPoint"
                android:textColor="@color/text"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/space_medium"
                android:textColor="@color/text"
                android:textSize="14sp"
                app:seteandoRegistroItem="@{llamadoDeEmergenciaItem.direccion}"
                tools:text="asd\nasdasd\nasdasd\nasd" />
        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:elevation="4dp"
            android:background="@color/azulMarino"
            app:layout_constraintTop_toBottomOf="@id/linearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!--Detalles-->
        <TextView
            android:id="@+id/textView_llamadoDeEmergencia_motivoDelLlamado"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider3"
            android:gravity="end"
            android:paddingHorizontal="@dimen/space_medium"
            android:paddingVertical="@dimen/textPadding"
            android:text="@string/detalles"
            android:textColor="@color/text"
            android:textSize="20sp"
             />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/space_medium"
            android:paddingVertical="@dimen/textPadding"
            android:textColor="@color/text"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/textView_llamadoDeEmergencia_motivoDelLlamado"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView_llamadoDeEmergencia_motivoDelLlamado"
            app:layout_constraintTop_toTopOf="@id/textView_llamadoDeEmergencia_motivoDelLlamado"
            app:seteandoRegistroItem="@{llamadoDeEmergenciaItem.motivoDelLlamado}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

