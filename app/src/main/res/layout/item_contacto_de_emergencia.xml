<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >
    <data>
        <variable
            name="contactoDeEmergenciaItem"
            type="com.example.soluemergencias.data.data_objects.domainObjects.ContactoDeEmergencia" />
    </data>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView_vistaGeneral_cardVolanteros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_medium"
        android:layout_marginHorizontal="@dimen/space_big"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/space_medium">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_itemContactoDeEmergencia_foto"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/contacto_emergencia" />

            <TextView
                android:id="@+id/textView_itemContactoDeEmergencia_llamarContacto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/imageView_itemContactoDeEmergencia_foto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="20dp"
                android:background="@color/azulMarino"
                android:text="@string/llamar"
                android:textColor="@color/white"
                android:textAppearance="?attr/textAppearanceHeadline6"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>