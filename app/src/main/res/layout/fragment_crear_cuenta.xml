<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.example.soluemergencias.ui.crearcuenta.CrearCuentaViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/container">

            <ImageView
                android:id="@+id/imageView_crearCuenta_fotoPerfil"
                android:layout_width="180dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/space_small"
                android:layout_marginTop="@dimen/space_medium"
                android:background="@drawable/edittext_border"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_crearCuenta_titulo"
                app:layout_constraintBottom_toBottomOf="@id/textInputLayout_telefono"/>
            <TextView
                android:id="@+id/textView_crearCuenta_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginHorizontal="@dimen/space_small"
                android:layout_marginTop="@dimen/space_bigger"
                android:background="@color/azulMarino"
                android:text="@string/crear_cuenta"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textAlignment="center"
                 />

            <ImageView
                android:id="@+id/imageView_crearCuenta_tomarFoto"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="@string/tomar_foto"
                app:layout_constraintEnd_toEndOf="@+id/imageView_crearCuenta_fotoPerfil"
                app:layout_constraintBottom_toBottomOf="@id/imageView_crearCuenta_fotoPerfil"
                android:src="@drawable/baseline_camera_alt_24_azul_marino" />
            <!--Perfil-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textField_perfil"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_small"
                app:layout_constraintStart_toEndOf="@id/imageView_crearCuenta_fotoPerfil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView_crearCuenta_fotoPerfil"
                app:expandedHintEnabled="false"
                >

                <AutoCompleteTextView
                    android:id="@+id/editText_dataUsuario_rol"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:inputType="none"
                    android:hint="@string/perfil" />

            </com.google.android.material.textfield.TextInputLayout>
            <!--Rut-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_rut"
                style="?attr/textInputOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_small"
                app:endIconMode="clear_text"
                android:hint="@string/rut"
                app:layout_constraintStart_toEndOf="@id/imageView_crearCuenta_fotoPerfil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textField_perfil"
                app:expandedHintEnabled="false"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_dataUsuario_rut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <!--Teléfono-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_telefono"
                style="?attr/textInputOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_small"
                android:layout_marginEnd="@dimen/space_small"
                android:layout_marginTop="@dimen/space_very_small"
                app:endIconMode="clear_text"
                android:hint="@string/telefono"
                app:layout_constraintStart_toEndOf="@id/imageView_crearCuenta_fotoPerfil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout_rut"
                app:expandedHintEnabled="false"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_dataUsuario_telefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <!--Nombre y apellidos-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_nombreCompleto"
                style="?attr/textInputOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_small"
                android:layout_marginTop="@dimen/space_small"
                app:endIconMode="clear_text"
                android:hint="@string/nombrecompleto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout_telefono"
                app:expandedHintEnabled="false"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_dataUsuario_nombreCompleto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <!--Email-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_usuario"
                style="?attr/textInputOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_small"
                android:layout_marginTop="@dimen/space_very_small"
                app:endIconMode="clear_text"
                android:hint="@string/email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout_nombreCompleto"
                app:expandedHintEnabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_dataUsuario_usuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <!--Contraseña-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_password"
                style="?attr/textInputOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_small"
                android:layout_marginTop="@dimen/space_very_small"
                app:endIconMode="clear_text"
                android:hint="@string/password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/textInputLayout_confirmarPassword"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout_usuario"
                app:expandedHintEnabled="false"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_dataUsuario_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <!--Reingrese contraseña-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_confirmarPassword"
                style="?attr/textInputOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_small"
                android:layout_marginTop="@dimen/space_very_small"
                app:endIconMode="clear_text"
                android:hint="@string/confirmar_password"
                app:layout_constraintStart_toEndOf="@id/textInputLayout_password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout_usuario"
                app:expandedHintEnabled="false"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_dataUsuario_confirmarPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/button_dataUsuario_volver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@string/volver"
                android:textColor="@color/azulMarino"
                app:layout_constraintBottom_toBottomOf="@+id/button_dataUsuario_confirmar"
                app:layout_constraintEnd_toStartOf="@id/button_dataUsuario_confirmar"
                app:layout_constraintTop_toTopOf="@id/button_dataUsuario_confirmar" />
            <Button
                android:id="@+id/button_dataUsuario_confirmar"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_small"
                android:layout_marginEnd="@dimen/space_small"
                android:text="@string/confirmar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textInputLayout_confirmarPassword" />
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/button_dataUsuario_confirmar"
                android:indeterminate="true"
                android:contentDescription="@string/loading"
                android:progressDrawable="@color/orange"
                android:visibility="gone"
                tools:visibility="visible"
                app:cloudRequestStatusCircularProgress="@{viewModel.status}"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>